// .vscode/tasks.json
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build frontend",
            "type": "shell",
            "command": "rm -rf yarn.lock node_modules && yarn && yarn start",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": true,
            }
        },
        {
            "label": "Build backend",
            "type": "shell",
            "command": "rm -rf .venv && python -m venv .venv && source .venv/bin/activate && make develop && make all",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": true,
            }
        },
        {
            "label": "Build all",
            "dependsOn": [
                "Build frontend",
                "Build backend"
            ],
            "group": "build",
            "runOptions": {
                // "runOn": "folderOpen" // This starts both tasks when the container is started
            },
        }
    ]
}